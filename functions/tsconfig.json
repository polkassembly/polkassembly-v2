{
	"compilerOptions": {
		"module": "NodeNext",
		"esModuleInterop": true,
		"moduleResolution": "NodeNext",
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "lib",
		"sourceMap": true,
		"strict": true,
		"target": "es2017",
		"baseUrl": "./",
		"skipLibCheck": true
	},
	"compileOnSave": true,
	"include": ["src"],
	"exclude": ["node_modules", "lib"]
}
